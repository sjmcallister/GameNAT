@{
	ViewBag.Title = "GameNAT - XBox Game Management System";
}

<!DOCTYPE html>

<html>
<head>
	<meta name="viewport" content="width=device-width" />
	<title>@ViewBag.Title</title>
</head>
<body>
	<div id="header">
		<h1>Welcome to @ViewBag.Title</h1>
	</div>
	<div id="content">
		<h3>Current Features:</h3>
		<ul>
			<li>@Html.ActionLink("View Current Games", "../Games")</li>
			<li>@Html.ActionLink("Add Vote", "AddVote", "Games")</li>
			<li>@Html.ActionLink("Add Game", "AddGame", "Games")</li>
		</ul>
	</div>
</body>
</html>
